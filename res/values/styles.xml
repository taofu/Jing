<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
      <style name="Theme.MainActivity" parent="android:Theme">

        <!-- <item name="android:typeface">serif</item> -->
        <!-- 是否允许有标题栏 -->
        <item name="android:windowNoTitle">true</item>
       <!--  <item name="android:windowFullscreen">true</item>
        提示背景图片
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item> -->
        
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
     	
    <style name="left_menu_item_parent" >
        <item name="android:layout_width" > fill_parent</item>
        <item name="android:layout_height" > 60dp</item>
        <item name="android:layout_marginTop" > 1dp</item>
        <item name="android:paddingLeft" > 15dp</item>
        <item name="android:background" > @color/left_menu_itme_bg</item>
        <item name="android:gravity" > center_vertical</item>
        <item name="android:orientation" > horizontal</item>
        </style>
   			
	<style name="left_menu_item_text" >
        <item name="android:layout_width" > fill_parent</item>
        <item name="android:layout_height" > wrap_content</item>
        <item name="android:layout_marginTop" > 1dp</item>
        <item name="android:textColor" > #FFFFFFFF</item>
        <item name="android:textSize" > 13sp</item>
        <item name="android:paddingLeft" > 15dp</item>
        <item name="android:textStyle" > bold</item>
        <item name="android:minHeight">63dp</item>
        <item name="android:background" > @color/left_menu_itme_bg</item>
        </style>
</resources>
